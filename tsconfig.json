{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "jsx": "react",
    "outDir": "build",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": false,
    "sourceMap": true,
    "moduleResolution": "node", //enable local file imports
    "watch": true,
    "declaration": true
  },
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "index.js"
  ],
  "types": ["react", "react-native", "jest"],
  "exclude": [
    "index.js",
    "android",
    "ios",
    "build", //the root directory
    "node_modules",
    "__tests__"
  ],
  "compileOnSave": true
}
